<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#A9C1F1"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@drawable/ic_menu_calender" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginLeft="5dp"
            android:textSize="8sp"
            android:id="@+id/btn_checkintime_available"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:text="Checkin"
            android:layout_gravity="center"
            />
        <EditText
            android:enabled="false"
            android:textAlignment="center"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/edt_checkintime_available"
            android:hint="Checkin time"
            android:layout_margin="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginLeft="5dp"
            android:textSize="8sp"
            android:id="@+id/btn_checkouttime_available"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:text="Checkout"
            android:layout_gravity="center"
            />
        <EditText
            android:enabled="false"
            android:textAlignment="center"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/edt_checkoutime_available"
            android:hint="Checkout time"
            android:layout_margin="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="@color/white"
            android:layout_marginLeft="60dp"
            android:src="@drawable/ic_confirm"
            android:id="@+id/btn_confirm_datepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textSize="8sp"
            android:layout_marginTop="5dp"
            />
        <ImageButton
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@id/btn_confirm_datepicker"
            android:src="@drawable/ic_cancle"
            android:id="@+id/btn_cancle_datepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancle"
            android:textSize="8sp"
            />
    </RelativeLayout>

</LinearLayout>