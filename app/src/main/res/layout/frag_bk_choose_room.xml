<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.booking.ChooseRoomFragment"

    >
    <com.google.android.material.button.MaterialButton
        android:id="@+id/txt_roomtype_frag_bk_choose_room"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="single room"
        android:layout_gravity="center"
        app:cornerRadius="42dp"
        android:backgroundTint="#D6C316" />
    <TextView
        android:id="@+id/txt_remain_count_frag_bk_choose_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remain: 4"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_frag_bk_choose_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        />
</LinearLayout>