<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F2F4F6"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/box_edit_text_color"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_name_frag_bk_item_roomtype_list"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="room type" />
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:id="@+id/btn_add_frag_bk_item_roomtype_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_checkedin"
            android:layout_gravity="center"
            />
        <com.google.android.material.textfield.TextInputLayout
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/box_edit_text_color"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_count_frag_bk_item_roomtype_list"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:hint="count"
            android:gravity="center"
            android:textColor="@color/black"
             />
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:id="@+id/btn_minus_frag_bk_item_roomtype_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_minus_checkedin"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_extra_room_frag_bk_item_roomtype_list"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_margin="5dp"
        app:cornerRadius="5dp"
        android:text="add room"
        android:textSize="10sp"
        app:backgroundTint="#FFC107"
        app:icon="@drawable/icon_add_circle" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_roomlist_of_type_frag_bk_item_roomtype_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>