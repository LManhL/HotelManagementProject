<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.roomservices.CheckedinFragment">

    <Button
        android:id="@+id/button_checkedin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Change type"
        android:textSize="14sp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        >
    </Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_fragment_checkedin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_checkedin"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"></androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>