<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#CCD8EA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_menu_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coca cola"
            />
        <TextView
            android:id="@+id/txt_menu_price"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:text="price: 15000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="#9BADD1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                app:backgroundTint="@color/light_blue_color"
                android:id="@+id/btn_minus_menu"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textAlignment="center"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txt_count_menu"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:layout_width="85dp"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                app:backgroundTint="@color/light_blue_color"
                android:id="@+id/btn_add_menu"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="+"
                android:layout_width="45dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>