<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners
        android:bottomRightRadius="1000dp"
        android:bottomLeftRadius="1000dp"
        />

    <gradient
        android:angle="45"
        android:endColor="@color/theme_color"
        android:gradientRadius="@dimen/cardview_compat_inset_shadow"
        android:startColor="@color/light_blue_color"
        android:type="linear" />

    <!--If your shape requires only one solid color-->
    <!--<solid
        android:color="#FFFFFF" />-->

    <size
        android:width="300dp"
        android:height="400dp" />

    <!--Use android:dashWidth="2dp" and android:dashGap="2dp"
    to add dashes to your stroke-->
    <stroke
        android:width="10dp"
        android:color="#FFFFFF" />

</shape>